<mvc:View
    controllerName="productsreport.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    height="100%"
>
    <f:DynamicPage
        id="dynamicPageId"
        stickySubheaderProvider="iconTabBar"
        class="sapUiNoContentPadding"
        toggleHeaderOnTitleClick="{/titleClickable}"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{appJSONModel>/selectedProduct/ProductName}" />
                </f:heading>

                <f:actions>
                    <Button
                        text="{i18n>edit}"
                        type="Emphasized"
                    />
                    <Button
                        text="{i18n>delete}"
                        type="Transparent"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <ObjectAttribute
                            title="{i18n>category}"
                            text="{appJSONModel>/selectedProduct/Category}"
                        />
                        <ObjectAttribute
                            title="{i18n>quantity}"
                            text="{appJSONModel>/selectedProduct/Quantity}"
                        />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                        <ObjectAttribute
                            title="{i18n>producer}"
                            text="{appJSONModel>/selectedProduct/ProducerName}"
                        />
                        <ObjectStatus
                            title="{i18n>status}"
                            text="{= ${appJSONModel>/selectedProduct/Quantity} > 100 ? 'Too much' : ${appJSONModel>/selectedProduct/Quantity} > 20 ? 'Good' : 'Not enough' }"
                            state="{= ${appJSONModel>/selectedProduct/Quantity} > 100 ? 'Error' : ${appJSONModel>/selectedProduct/Quantity} > 20 ? 'Success' : 'Warning'}"
                        />
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar
                id="iconTabBar"
                class="sapUiResponsiveContentPadding"
            >
                <items>
                    <IconTabFilter text="Products Info">
                        <VBox>
                            <HBox
                                alignItems="Center"
                                class="sapUiSmallMarginBottom"
                            >
                                <Title
                                    text="{i18n>productInfo}"
                                    level="H1"
                                />
                            </HBox>
                            <VBox>
                                <List>
                                    <StandardListItem
                                        title="{i18n>productName}"
                                        description="{appJSONModel>/selectedProduct/ProductName}"
                                    />
                                    <StandardListItem
                                        title="{i18n>producer}"
                                        description="{appJSONModel>/selectedProduct/ProducerName}"
                                    />
                                    <StandardListItem
                                        title="{i18n>category}"
                                        description="{appJSONModel>/selectedProduct/Category}"
                                    />
                                    <StandardListItem
                                        title="{i18n>quantity}"
                                        description="{appJSONModel>/selectedProduct/Quantity}"
                                    />
                                </List>
                            </VBox>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter text="{i18n>suppliers}">
                        <Table
                            headerText="{i18n>suppliers}"
                            items="{appJSONModel>/selectedProduct/Suppliers}"
                        >
                            <columns>
                                <Column>
                                    <header>
                                        <Text text="{i18n>companyName}" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Text text="{i18n>location}" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Text text="{i18n>email}" />
                                    </header>
                                </Column>
                            </columns>
                            <ColumnListItem>
                                <Text text="{appJSONModel>SupplierName}" />
                                <Text text="{appJSONModel>Location}" />
                                <Text text="{appJSONModel>Email}" />
                            </ColumnListItem>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
    </f:DynamicPage>
</mvc:View>
